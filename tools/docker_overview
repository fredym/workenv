#!/bin/bash

title()
{
  b=$(tput bold)
  n=$(tput sgr0)

  echo
  echo "$b$1$n"
  echo
}


title "HOSTS:"
docker-machine ls

title "DISK USAGE:"
du -hd0 ~/Library/Containers/com.docker.docker | awk '{ print $1 }'

title "IMAGES:"
docker images

title "VOLUMES:"
docker volume ls

title "NETWORKS:"
docker network ls

title "CONTAINERS:"
docker ps -a
